apiVersion: v1
kind: PersistentVolume
metadata:
  name: {{ .Values.backupVolume.name }}
  namespace: {{ .Values.namespace }}
spec:
  storageClassName: {{ .Values.backupVolume.storageClassName }}
  capacity:
    storage: {{ .Values.backupVolume.storage }}
  accessModes:
    - {{ .Values.backupVolume.accessMode }}
  hostPath:
    path: {{ .Values.backupVolume.mountPath }}
