apiVersion: v1
kind: PersistentVolume
metadata:
  name: {{ .Values.mongodbVolume.name }}
  namespace: {{ .Values.namespace }}
spec:
  storageClassName: {{ .Values.mongodbVolume.storageClassName }}
  capacity:
    storage: {{ .Values.mongodbVolume.storage }}
  accessModes:
    - {{ .Values.mongodbVolume.accessMode }}
  hostPath:
    path: {{ .Values.mongodbVolume.mountPath }}
